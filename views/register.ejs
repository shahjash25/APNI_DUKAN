<body style="margin: 0; padding: 0; width: 100vw; height: 100vh; display: flex;">
    <!-- Container for dummy image and form -->
    <div style="display: flex; width: 100%; height: 100vh;">

        <!-- Dummy Image Section -->
        <div style="width: 70%; height: 100vh;">
            <img src="https://via.placeholder.com/1344x1024" alt="dummy image" style="width: 100%; height: 100%; object-fit: cover;"/>
        </div>

        <!-- Form Section -->
        <div class="d-flex text-center" style="width: 30%; height: 100vh; padding: 2%; box-sizing: border-box;">
            <form action="/register" method="POST" style="border-width: 1px; border-style: solid; padding: 4%; border-radius: 10px; background-color: white;">
                <h2>Register</h2>
                <br>
                <div class="form-group row">
                    <label for="name" class="col-sm-3 col-form-label">Name</label>
                    <div class="col-sm-9">
                        <input type="text" class="form-control" name="name" id="name" placeholder="Name">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="user_type" class="col-sm-3 col-form-label">Type</label>
                    <div class="col-sm-9">
                        <select class="form-control" id="user_type" name="user_type">
                            <option value="Manager">Manager</option>
                            <option value="Clerk">Sales Clerk</option>
                            <option value="Staff">Supermarket Staff</option>
                        </select>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="username" class="col-sm-3 col-form-label">Username</label>
                    <div class="col-sm-9">
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <br>
                <div class="form-group row">
                    <div class="col-sm-10" style="margin-left: 8%;">
                        <button type="submit" class="btn btn-primary">Sign up</button>
                    </div>
                </div>
                <br>
                <div class="container signin">
                    <p>Already have an account? <a href="/login">Sign in</a>.</p>
                </div>
            </form>
        </div>
    </div>
</body>
