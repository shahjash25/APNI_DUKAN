<body style="margin: 0; padding: 0; width: 100vw; height: 100vh; display: flex;">
    <!-- Container for dummy image and login form -->
    <div style="display: flex; width: 100%; height: 100vh;">

        <!-- Dummy Image Section -->
        <div style="width: 70%; height: 100vh;">
            <img src="https://media.istockphoto.com/id/1319625327/photo/shopping-basket-full-of-variety-of-grocery-products-food-and-drink-on-yellow-background.jpg?s=612x612&w=0&k=20&c=GHyTjlkoFweJnbAadmn4tzEYvfiB73MTe93KMT3GIM0=" alt="dummy image" style="width: 100%; height: 100%; object-fit: cover;"/>
        </div>

        <!-- Login Form Section -->
        <div class="d-flex text-center" style="width: 30%; height: 100vh; padding: 2%; box-sizing: border-box;">
            <form action="/login" method="POST" style="padding: 4%; border-radius: 10px; background-color: white;box-shadow: 2px 2px 50px rgba(73, 153, 214, 0.2);">
                <h2>Login</h2>
                <br>
                <div class="form-group row">
                    <label for="username" class="col-sm-3 col-form-label">Username</label>
                    <div class="col-sm-9">
                        <label class="sr-only" for="username">Username</label>
                        <div class="input-group mb-2">
                            <div class="input-group-prepend">
                                <div class="input-group-text">@</div>
                            </div>
                            <input type="text" class="form-control" id="username" name="username" placeholder="Username">
                        </div>
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-sm-3 col-form-label">Password</label>
                    <div class="col-sm-9">
                        <input type="password" class="form-control" id="password" name="password" placeholder="Password">
                    </div>
                </div>
                <br>
                <div class="form-group row p-3">
                   
                        <button type="submit" class="btn btn-primary btn-block" >Log in</button>
                    
                </div>
                <br>
            </form>
        </div>
    </div>
</body>
